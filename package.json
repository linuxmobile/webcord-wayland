  "dependencies": {
    "@fontsource/fira-code": "^4.5.13",
    "@fontsource/roboto": "^4.5.8",
    "@fontsource/ubuntu": "^4.5.11",
    "@pkgjs/parseargs": "^0.11.0",
    "@spacingbat3/disconnection": "^1.1.0",
    "@spacingbat3/kolor": "^3.0.2",
    "deepmerge-ts": "^4.3.0",
    "dompurify": "^2.4.3",
    "electron-fetch": "^1.9.1",
    "highlight.js": "^11.7.0",
    "marked": "^4.2.12",
    "semver": "^7.3.8",
