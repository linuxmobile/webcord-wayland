{
  "$schema": "./schemas/schemastore/package.json",
  "name": "webcord",
  "productName": "WebCord",
  "version": "4.1.1-wayland.1",
  "description": "A Discord and Fosscord client made with the Electron API. For Wayland w/ screenshare and audioshare support",
  "main": "app/code/common/main.js",
  "scripts": {
    "prepare": "husky install",
    "test": "tsc && eslint --cache --cache-location cache/eslint.json --ext .json,.ts .",
    "lint": "eslint --cache --cache-location cache/eslint.json --ext .json,.ts .",
    "build": "tsc",
    "compile": "tsc",
    "tsc": "tsc",
    "watch": "tsc --watch",
    "start": "tsc && electron .",
    "package": "tsc && electron-forge package",
    "make": "tsc && electron-forge make",
    "publish": "tsc && electron-forge publish",
    "prepack": "tsc && electron-forge package && echo 'This script will now fail to cancel creating a Node package...' && exit 1"
  },
  "author": {
    "name": "SpacingBat3",
    "email": "git@spacingbat3.anonaddy.com",
    "url": "https://github.com/SpacingBat3"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SpacingBat3/WebCord"
  },
  "bugs": {
    "url": "https://github.com/SpacingBat3/WebCord/issues"
  },
  "homepage": "https://github.com/SpacingBat3/WebCord#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.5",
    "@electron-forge/maker-deb": "^6.0.5",
    "@electron-forge/maker-dmg": "^6.0.5",
    "@electron-forge/maker-flatpak": "^6.0.5",
    "@electron-forge/maker-rpm": "^6.0.5",
    "@electron-forge/maker-snap": "^6.0.5",
    "@electron-forge/maker-squirrel": "^6.0.5",
    "@electron-forge/maker-wix": "^6.0.5",
    "@electron-forge/maker-zip": "^6.0.5",
    "@electron-forge/publisher-github": "^6.0.5",
    "@electron/fuses": "^1.6.1",
    "@reforged/maker-appimage": "^3.1.8",
    "@tsconfig/node16-strictest": "^1.0.4",
    "@types/dompurify": "^2.4.0",
    "@types/marked": "^4.0.8",
    "@types/node": "^18.13.0",
    "@types/pkgjs__parseargs": "^0.10.0",
    "@types/semver": "^7.3.13",
    "@types/source-map-support": "^0.5.6",
    "@types/spdx-expression-parse": "^3.0.2",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "electron": "^22.2.0",
    "eslint": "latest",
    "eslint-import-resolver-typescript": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-json-schema-validator": "^4.0.3",
    "husky": "^8.0.3",
    "typescript": "^4.9.5"
